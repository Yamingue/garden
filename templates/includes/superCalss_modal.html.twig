<!-- Modal -->
<div class="modal top fade" id="superClass" tabindex="-1" aria-labelledby="superClass" aria-hidden="true"
    data-mdb-backdrop="static" data-mdb-keyboard="false">
    <div class="modal-dialog modal-fullscreen ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Buttons trigger collapse -->
                <a class="btn btn-primary mb-2" data-mdb-toggle="collapse" href="#collapseSalle" role="button"
                    aria-expanded="false" aria-controls="collapseSalle">
                    Ajouter une salle
                </a>

                <!-- Collapsed content -->
                <div class="collapse mt-3" id="collapseSalle">
                    <div class="row mb-2">
                        <div class="col-sm-6 mx-auto">
                            <div class="card border border-primary">
                                <div class="card-header">
                                    Ajouter une salle
                                </div>
                                <div class="card-body">
                                    {{ form_start(classForm)}}
                                    {{ form_widget(classForm)}}
                                    <button type="submit" class="btn btn-success"> Ajouter <i
                                            class="fas fa-plus ms-1"></i></button>
                                    {{ form_end(classForm)}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <table class="table table-striped table-hover table-bordered ">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Label</th>
                            <th scope="col">Gardienne</th>
                            <th scope="col">Enfants</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for s in salles %}
                        <tr>
                            <td>{{s.nom}}</td>
                            <td>
                                {% for g in s.gardiennes %}
                                {% if loop.index0 == 0 %}{{ g }}{% else %},{{ g }}{% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                Jean, Jack, paule,
                            </td>
                            <td>
                                <div class="btn btn-warning">
                                    <i class="fas fa-edit"></i>
                                </div>
                                <div class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>

                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>