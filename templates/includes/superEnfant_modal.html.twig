<!-- Modal -->
<div class="modal top fade" id="superEnfant" tabindex="-1" aria-labelledby="superEnfant" aria-hidden="true"
    data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-fullscreen ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="superEnfant">{% trans %}Children list{% endtrans %}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Buttons trigger collapse -->
                <a class="btn btn-primary mb-2" data-bs-toggle="collapse" href="#collapseSalle" role="button"
                    aria-expanded="false" aria-controls="collapseSalle">
                    {% trans %}Add child{% endtrans %}
                </a>

                <!-- Collapsed content -->
                <div class="collapse mt-3" id="collapseSalle">
                    <div class="row mb-2">
                        <div class="col-sm-6 mx-auto">
                            <div class="card border border-primary">
                                <div class="card-header">
                                    {% endtrans %}Add classroom{% endtrans %}
                                </div>
                                <div class="card-body">
                                    {{ form_start(enfantForm)}}
                                    {{ form_widget(enfantForm)}}
                                    <button type="submit" class="btn btn-success"> {% trans %}Add{% endtrans %} <i
                                            class="fas fa-plus ms-1"></i></button>
                                    {{ form_end(enfantForm)}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered ">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Photos</th>
                            <th scope="col">Nom complet</th>
                            <th scope="col">Age</th>
                            <th scope="col">Classe</th>
                            <th scope="col">Parent</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for e in app.user.enfants %}
                        <tr>
                            <td>
                                <img src="{{ asset(e.photo) }}" height="50px">
                            </td>
                            <td>
                                {{ e.nom ~ " " ~ e.prenom }}
                            </td>
                            <td>
                                {{e.age}} ans
                            </td>
                            <td>
                                {{ e.salle }}
                            </td>
                            <td>
                                {% for p in e.parent %}
                                    {% if loop.index0 == 0 %}
                                        {{ p }}
                                    {% else %}
                                        ,{{ p }}
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path("delete_enfant",{id:e.id}) }}" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                                <a href="{{ path("edite_enfant",{id:e.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>

                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>