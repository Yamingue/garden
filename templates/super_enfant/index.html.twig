{% extends "super.html.twig" %}

{% block body %}
<button type="button" class="btn btn-gradient-primary mb-2" data-bs-toggle="modal" data-bs-target="#superEnfant">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
      </svg> 
      Add child
</button>
<table class="table table-striped table-hover table-bordered ">
    <thead class="table-dark">
        <tr>
            <th scope="col">Photos</th>
            <th scope="col">Nom complet</th>
            <th scope="col">Age</th>
            <th scope="col">Classe</th>
            <th scope="col">Parent</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for e in app.user.enfants %}
        <tr>
            <td>
                <img src="{{ asset(e.photo) }}" height="50px">
            </td>
            <td>
                {{ e.nom ~ " " ~ e.prenom }}
            </td>
            <td>
                {{e.age}} ans
            </td>
            <td>
                {{ e.salle }}
            </td>
            <td>
                {% for p in e.parent %}
                {% if loop.index0 == 0 %}
                {{ p }}
                {% else %}
                ,{{ p }}
                {% endif %}
                {% endfor %}
            </td>
            <td>
                <a href="{{ path("delete_enfant",{id:e.id}) }}" class="btn btn-sm btn-gradient-danger">
                    <i class="fas fa-trash-alt"></i>
                </a>
                <a href="{{ path("edite_enfant",{id:e.id}) }}" class="btn btn-sm btn-gradient-warning">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>

</table>

<!-- Modal -->
<div class="modal top fade" id="superEnfant" tabindex="-1" aria-labelledby="superEnfant" aria-hidden="true"
    data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="superEnfant">Add child</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card border border-primary">
                    <div class="card-header">
                       Add classroom
                    </div>
                    <div class="card-body">
                        {{ form_start(enfantForm)}}
                        {{ form_widget(enfantForm)}}
                        <button type="submit" class="btn btn-success"> Add <i class="fas fa-plus ms-1"></i></button>
                        {{ form_end(enfantForm)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}