{% extends "super.html.twig" %}
{% block title %}
    Babysitter
{% endblock %}
{% block body %}
<button type="button" class="btn btn-gradient-primary mb-2" data-bs-toggle="modal" data-bs-target="#superGardienne">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
      </svg> 
      Add babysitter
</button> 
<!-- Modal -->
<div class="modal top fade" id="superGardienne" tabindex="-1" aria-labelledby="superGardienne" aria-hidden="true"
    data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card border border-primary">
                    <div class="card-header">
                        Add babysitter
                    </div>
                    <div class="card-body">
                        {{ form_start(gardienFrom)}}
                        {{ form_row(gardienFrom.salles,{data:{'salle':app.user.salles}}) }}
                        {{ form_widget(gardienFrom)}}
                        <button type="submit" class="btn btn-gradient-success"> Add <i
                                class="fas fa-plus ms-1"></i></button>
                        {{ form_end(gardienFrom)}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped table-hover table-bordered ">
    <thead class="table-dark">
        <tr>
            <th scope="col">Photo</th>
            <th scope="col">Nom</th>
            <th scope="col">Prenom</th>
            <th scope="col">Email</th>
            <th scope="col">Salle</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for g in app.user.gardiennes %}
        <tr>
            <td>
                <img src="{{ asset(g.photo) }}" width="150px">
            </td>
            <td>
                {{g.nom}}
            </td>
            <td>
                {{g.prenom}}
            </td>
            <td>
                {{g.email}}
            </td>
            <td>
                {{g.salles}}
            </td>
            <td>
                <a href="{{ path('edite_gardienne',{id:g.id}) }}" class="btn btn-sm btn-gradient-warning">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                      </svg>
                </a>
                <a href="{{ path('delete_gardienne',{id:g.id}) }}" class="btn btn-sm btn-gradient-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                      </svg>
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>

</table>
{% endblock %}